#!/bin/bash
# sets Python compiler to version 3.9 for this user
#  
# precondition: requires pyenv to be installed
#
pyenv install 3.9.9 && pyenv local 3.9.9 && echo "Python release 3.9 activated as 'global' pyenv release" &
cat >> ~/.bashrc <<'INPUTEND'
# added by runonce as python config
alias python=python3
INPUTEND
